# Database Configuration
DATABASE_URL=mysql://username:password@localhost:3306/core_fire_portal

# AWS S3 Configuration (for signature and PDF storage)
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=core-fire-portal-uploads

# SMTP Email Configuration
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@corefire.co.uk
SMTP_PASS=your_smtp_password
SMTP_FROM=noreply@corefire.co.uk
SMTP_FROM_NAME=Core Fire Protection

# Application Configuration
NODE_ENV=development
PORT=5000

# OAuth Configuration (Manus OAuth)
# These are automatically configured by the Manus platform
# OAUTH_CLIENT_ID=auto_configured
# OAUTH_CLIENT_SECRET=auto_configured
# OAUTH_CALLBACK_URL=auto_configured

# Admin Configuration
# Set the OpenID of the initial admin user
OWNER_OPEN_ID=your_admin_openid
